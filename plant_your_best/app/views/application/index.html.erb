<html>
    <head>
        <%= stylesheet_link_tag 'home_style.css', media: 'print, screen' %>
        <%= stylesheet_link_tag 'search_animation.css', media: 'print, screen' %>
        <%= javascript_include_tag 'click_script' %>
    </head>
    <body>
        <div id="top">
            <div id="pad-top">
            
            </div>
            <div id="logo">
                <%= image_tag('logo.png') %>
            </div>
            <div id="biotext">
                <h1 id="bio">USDA Plants Database, 250,000+ common-name plants across 50 states</h1>
            </div>
            <div id="search-text">
                <h1 id="search-text-inner">Search by Plant or State</h1>
            </div>
            <div id="buttons">
                <div id="search-plant"><p>plant</p></div>
                <div id="search-state"><p>state</p></div>
                <div id="searchbar" style="display: none;">
                    <div id="exit"><%= image_tag('x.png') %></div>
                    <input type="text">
                    <div id="searchbutton"><%= image_tag('search.png') %></div>
                </div>
            </div>
            <div id="help">
                <p>need more parameters? <a href="<%= request.base_url %>/api/doc">read the documentation.</a></p>
            </div>
        </div>






    </body>
    <footer>
        <%= javascript_include_tag 'p5.min' %>

        <%= javascript_include_tag 'vanta.trunk.min' %>
        <script>
        VANTA.TRUNK({
        el: "#top",
        mouseControls: true,
        touchControls: true,
        minHeight: 200.00,
        minWidth: 200.00,
        scale: 1.00,
        scaleMobile: 1.00,
        color: 0xb7f5be,
        backgroundColor: 0xffffff,
        spacing: 7.00,
        chaos: 2.50
        })
        </script>
        <%= javascript_include_tag 'home_listeners' %>
    </footer>
</html>